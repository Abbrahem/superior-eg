{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "build",
  "rewrites": [
    {
      "source": "/api/admin/login",
      "destination": "/api/admin-login"
    },
    {
      "source": "/api/admin/products/:path*",
      "destination": "/api/admin-products"
    },
    {
      "source": "/api/admin/orders/:path*",
      "destination": "/api/admin-orders"
    },
    {
      "source": "/api/products/:path*",
      "destination": "/api/products"
    },
    {
      "source": "/api/orders/:path*",
      "destination": "/api/orders"
    },
    {
      "source": "/api/promocodes/:path*",
      "destination": "/api/promocodes"
    },
    {
      "source": "/api/contact/:path*",
      "destination": "/api/contact"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
